
<h1>Photos</h1>

<table>
  <thead>
    <tr>
      <th>Caption</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= photo.caption %></td>
        <td><%= image_tag(photo.image.url, class: 'w-100 img-fluid') %></td>
        <td><%= photo.created_at.strftime("%A, %d %b %Y %l:%M %p") %></td>
        <td><%= photo.album.user.profile.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

