
<h1>Photos</h1>

<table>
  <thead>
    <tr>
      <th>Caption</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @album.photos.each do |photo| %>
      <tr>
        <td><%= photo.caption %></td>
        <td><%= image_tag(photo.image.url, class: 'w-100 img-fluid') %></td>
        <td><%= link_to 'Edit', edit_album_photo_path(@album, photo) %></td>
        <td><%= link_to 'Destroy', album_photos_path(@album), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Photo', new_album_photo_path %>
